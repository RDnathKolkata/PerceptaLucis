# YOLO Detection Server Configuration
# customize the values

# YOLO Model Settings
YOLO_MODEL_PATH=yolo11m.pt
CONFIDENCE_THRESHOLD=0.5


# ESP32 Configuration

# IMPORTANT: Replace with actual ESP32-CAM's WiFi IP address!
# Find ESP32-CAM serial monitor or router's DHCP list
ESP32_AUDIO_URL=http://192.1xx.yyy/abcd

# Timeout for ESP32 HTTP requests (seconds)
# huge latency for wifi
# Increase if you see timeout errors
ESP32_TIMEOUT=1.0

# Alert Settings
DANGER_DISTANCE_M=2.0
ALERT_COOLDOWN=3.0

# Camera Calibration (CRITICAL FOR ACCURATE DISTANCE!)
# ESP32-CAM SPECIFIC CALIBRATION (QVGA):


# 1. Configure ESP32-CAM to send QVGA frames (320×240)
# config.frame_size = FRAMESIZE_QVGA;
# config.jpeg_quality = 10;
# 2. Place a car or person at exactly 3 meters distance
# 3. Upload frame to server and note pixel height
# 4. Calculate focal length:
# CAMERA_FOCAL_LENGTH_PX = (pixel_height × 3.0) / real_height


# Example at QVGA resolution:
# Car (1.5m) at 3m → ~170–180px height → (175 × 3.0) / 1.5 ≈ 350px
# Typical range for ESP32-CAM (QVGA): 250–400px


CAMERA_FOCAL_LENGTH_PX=700.0  #must FOR THE LOVE OF GOD PLEASEE RECALIBRATE

# ESP32-CAM OV2640 Camera Specifications
CAMERA_SENSOR_WIDTH_MM=3.68
CAMERA_SENSOR_HEIGHT_MM=2.76

# Image Resolution (MUST match  ESP32-CAM config.frame_size!)
IMAGE_WIDTH_PX=320
IMAGE_HEIGHT_PX=240
# QVGA (320×240) - FASTER but less accurate

# Memory Management
# time to wait between memory cleanups in s
MEMORY_CLEANUP_INTERVAL=60

# time to keep tack of obj not seen in s
MEMORY_MAX_AGE=30

# Display Settings
# false to run headless
DISPLAY_ENABLED=true




